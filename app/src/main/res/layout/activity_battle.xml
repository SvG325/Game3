<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_green"
    tools:context="com.example.stphanie.game3.BattleActivity">

    <TextView
        android:id="@+id/tv_battleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_title"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_vert_50"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <android.support.constraint.Guideline
        android:id="@+id/gl_vert_17"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.167" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_vert_33"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.333" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_vert_67"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.667" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_vert_83"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.833" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_horz_40"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>


    <ProgressBar
        android:id="@+id/hpBarPlayer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintBottom_toTopOf="@+id/img_battlePlayer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gl_vert_50"
        app:layout_constraintTop_toBottomOf="@+id/tv_battleTitle" />

    <ImageView
        android:id="@+id/img_battlePlayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="2dp"
        android:scaleType="fitEnd"
        android:src="@drawable/green_diamond"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gl_vert_50"
        app:layout_constraintTop_toBottomOf="@+id/hpBarPlayer"
        app:layout_constraintBottom_toTopOf="@+id/gl_horz_40"/>

    <ProgressBar
        android:id="@+id/hpBarEnemy"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toRightOf="@id/gl_vert_50"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_battleTitle" />

    <ImageView
        android:id="@+id/img_battleEnemy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="2dp"
        android:scaleType="fitStart"
        android:src="@drawable/red_diamond"
        app:layout_constraintLeft_toRightOf="@id/gl_vert_50"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hpBarEnemy"
        app:layout_constraintBottom_toTopOf="@+id/gl_horz_40"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/sv_battleLog"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorTranspGrey"
        app:layout_constraintBottom_toTopOf="@+id/bt_go"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_horz_40">


        <TextView
            android:id="@+id/tv_battleLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="test"
            android:textSize="18dp" />

    </ScrollView>



    <Button
        android:id="@+id/bt_go"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:onClick="onGoClick"
        android:layout_marginRight="20dp"
        android:text="@string/bt_go"
        android:padding="0dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonshape"
        app:layout_constraintBottom_toTopOf="@+id/img_skill6"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_skillDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorTranspGrey"
        android:text="@string/battle_selectedSkillDescr"
        app:layout_constraintTop_toBottomOf="@+id/sv_battleLog"
        app:layout_constraintBottom_toTopOf="@+id/img_skill1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_go" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/skillholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_skill1"
        />


    <ImageView
        android:id="@+id/img_skill1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/yellow_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/gl_vert_17" />

    <ImageView
        android:id="@+id/img_skill2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/yellow_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gl_vert_17"
        app:layout_constraintRight_toLeftOf="@id/gl_vert_33" />

    <ImageView
        android:id="@+id/img_skill3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/yellow_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gl_vert_33"
        app:layout_constraintRight_toLeftOf="@id/gl_vert_50" />

    <ImageView
        android:id="@+id/img_skill4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/yellow_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gl_vert_50"
        app:layout_constraintRight_toLeftOf="@id/gl_vert_67" />

    <ImageView
        android:id="@+id/img_skill5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/yellow_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gl_vert_67"
        app:layout_constraintRight_toLeftOf="@id/gl_vert_83" />

    <ImageView
        android:id="@+id/img_skill6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/yellow_triangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/gl_vert_83"
        app:layout_constraintRight_toRightOf="parent" />




</android.support.constraint.ConstraintLayout>
